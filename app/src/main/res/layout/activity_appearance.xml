<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/titleBar"
        layout="@layout/include_navi" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/monitoring_bg"/>

        <EditText
            android:id="@+id/et_put_appearance_name"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="150dp"
            android:background="@null"
            android:gravity="center"
            android:hint="输入要查询或编辑的外观名称"
            android:textColor="@color/base_color_text_white"
            android:textColorHint="@color/base_color_text_gray"
            android:textSize="16.5sp"/>

        <TextView
            android:id="@+id/tv_appearance_query"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/et_put_appearance_name"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_edit_monitor_bg"
            android:gravity="center"
            android:text="外观查询"
            android:textColor="@color/base_color_text_white"
            android:textSize="16.5sp"/>

        <TextView
            android:id="@+id/tv_appearance_editor"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_appearance_query"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/sel_btnbg_monitor"
            android:gravity="center"
            android:text="外观编辑"
            android:textColor="@color/base_color_text_white"
            android:textSize="16.5sp"/>

    </RelativeLayout>

</LinearLayout>